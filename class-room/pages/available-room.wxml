<navBar background='#fff' back="{{true}}" home="{{true}}" bindback="handlerGobackClick" bindhome="handlerGohomeClick" />

<view class="nav">
	<scroll-view scroll-x="true" class="sub-nav" show-scrollbar="{{false}}">
		<block wx:for="{{weekDates}}" wx:key="index">
			<view class="nav-item date {{choosedDate == item ? 'choosed' : ''}}"
				data-date="{{item}}" bindtap="tapDate">{{ index === 0 ? "今天" : item }}</view>
		</block>
	</scroll-view>
	<scroll-view scroll-x="true" class="sub-nav">
		<block wx:for="{{campuses}}" wx:key="index">
			<view class="nav-item {{choosedCampus == item ? 'choosed' : ''}}"
				data-campus="{{item}}" bindtap="tapCampus">{{item}}</view>
		</block>
	</scroll-view>
	<scroll-view scroll-x="true" class="sub-nav">
		<block wx:for="{{buildings[choosedCampus]}}" wx:key="index">
			<view class="nav-item {{choosedBuilding == item ? 'choosed' : ''}}"
				data-building="{{item}}" bindtap="tapBuilding">{{item}}</view>
		</block>
	</scroll-view>
</view>

<view class="tr comment">
	<view class="comment-cell">
		<view class="status free"  /> <view class="comment-item c1">空闲</view>
		<view class="status inuse" /> <view class="comment-item c2">有课</view>
	</view>
	<view class="comment-cell">
		<view class="comment-item c3">| 上午</view>
		<view class="comment-item c4">| 下午</view>
		<view class="comment-item c5">| 晚上</view>
	</view>
</view>
<scroll-view class="table" scroll-y="true" show-scrollbar="false"
	enhanced="true" bindscrolltolower="loadMore">

	<block wx:if="{{content.length > 0}}">
		<block wx:for="{{content}}" wx:key="room" wx:for-index="room" wx:for-item="statusList">
			<view class="tr">

				<view class="td room-name-tuple">
					<view class="room-name">{{statusList.room}}</view>
					<view class="room-metadata">座位数 {{statusList.capacity}}</view>
				</view>

				<view class="td status-list">
					<view wx:for="{{[1, 2, 3, 4]}}" wx:for-item="n" wx:key="n"
						class="status {{statusList.busyTime[n-1] == 1 ? 'inuse' : 'free'}} {{nowInterval == n && choosedDate == dates[0] ? 'now' : ''}}" />
					<view class="delimiter" />
					<view wx:for="{{[5, 6, 7, 8]}}" wx:for-item="n" wx:key="n"
						class="status {{statusList.busyTime[n-1] == 1 ? 'inuse' : 'free'}} {{nowInterval == n && choosedDate == dates[0] ? 'now' : ''}}" />
					<view class="delimiter" />
					<view wx:for="{{[9, 10, 11]}}" wx:for-item="n" wx:key="n"
						class="status {{statusList.time[n-1] == 1 ? 'inuse' : 'free'}} {{nowInterval == n && choosedDate == dates[0] ? 'now' : ''}}" />
				</view>

			</view>
		</block>
	</block>

	<block wx:else>
		<view class="loading-free">
			<image src="../assets/free.png" class="images" />
			<view class="td text">今天休息ヾ(^▽^*)))</view>
			<view class="td text" style="opacity: .75;">或没有数据 (```・д・)σ</view>
		</view>
	</block>

