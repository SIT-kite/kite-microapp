}

.container_publisher {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.img_publisher {
  width: 100rpx;
  height: 100rpx;
  box-sizing: content-box;
  border-radius: 50%;
  border: solid #c9daf8 7rpx;
}

.text_publisher {
  margin-top: 20rpx;
  text-align: center;
  color: rgba(102, 102, 102, 0.6);
  font-size: 28rpx;
}

.container_header_bottom_bar {
  position: relative;
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
}

.icon_copy {
	margin: 5rpx;
	width: 60rpx;
	height: 60rpx;
}

.icon_share {
  width: 60rpx;
  height: 60rpx;
}


.btn_share {
  padding: 0rpx !important;
