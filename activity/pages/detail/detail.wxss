.btn_like {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: larger;
  font-weight: bold;
  color: rgba(255, 0, 0, 0.5);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #F2994A;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to right, #F2C94C, #F2994A);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #F2C94C, #F2994A); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}
 
.container_content {
  height: 20%;
  display: flex;
  flex-direction: column;
  margin-top: 60rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 2rpx 0rpx;
}

.container_content_hint {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: large;
  padding-left: 6%;
  padding-top: 3%;
  font-weight: bold;
}

.lump_hint {
  width: 20rpx;
  height: 20rpx;
  margin: 20rpx;
  margin-left: 5%;
  background: #F2994A;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to right, #F2C94C, #F2994A);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #F2C94C, #F2994A); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}

.container_content_text {
  padding: 6%;
  padding-top: 3%;
}

.text_content {
  color: rgba(0, 0, 0, 0.7);
}

.container_fixed_bar {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0vh;
  width: 100%;
  height: 130rpx;
}


.btn_join {
  position: absolute;
  right: 60rpx;
  margin-top: 15rpx;
  width: 200rpx;
  height: 100rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FDC830;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to right, #F37335, #FDC830);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #F37335, #FDC830); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  opacity: 0.9;
  font-size: large;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.container_info_page {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self:flex-end;
}

.container_like {
  display: flex;
  flex-direction: row;
  margin: 10rpx;
}

.icon_like {
  height: 40rpx;
  width: 40rpx;
  opacity: 0.7;
}

.text_like {
  font-size: small;
  color: rgba(0, 0, 0, 0.5);
} 

.container_read {
  display: flex;
  flex-direction: row;
  margin: 10rpx;
  margin-right: 20rpx;
}

.icon_read {
  height: 40rpx;
  width: 40rpx;
  opacity: 0.7;
}

.text_read {
