.main {
  display: flex;
  flex-direction: column;
  height: auto;
  background-color: #F0F0F0;
}

.text_fixed {
  width: 100%;
  position: fixed;
  font-size: larger;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}


.container_header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 0rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 2rpx 0rpx;
}

.container_header_img {
  width: 100%;
  height: 400rpx;
  margin-bottom: 80rpx;
  box-shadow: 0rpx 0rpx 5rpx 0rpx #666666;
  /* border-radius: 10rpx; */
}

.img_header {
  width: 100%;
  height: 100%;
  /* border-radius: 10rpx; */
}

.container_header_content {
  width: 100%;
}

.container_header_content_top {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}


.lump_title {
  width: 15%;
  height: 20rpx;
  background: #00d2ff;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to left, #928DAB, #00d2ff);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to left, #928DAB, #00d2ff); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

}

.text_title {
  font-size: 40rpx;
  padding-right: 40rpx;
  padding-left: 40rpx;
  font-weight: bold;
}

.container_header_content_bottom {
  margin: 6%;
  font-size: 28rpx;
  color: rgba(102, 102, 102, 0.8);
}

.container_position {
  align-items: center;
