  <view class="container_content">

    <view class="container_content_hint">
      <!-- <view class="lump_hint"></view> -->
      <view class="text_hint">活动详情</view>
    </view>

    <view class="container_content_text">
      <rich-text class="text_content" nodes="{{detail.description}}"></rich-text>
    </view>

  </view>

