<navBar background='#fff' back="{{true}}" home="{{true}}"
  bindback="handlerGobackClick" bindhome="handlerGohomeClick"  wx:if="{{detail}}"/>
<view class="main">

  <!-- <view class="text_fixed" wx:if="{{showText}}">全国信息技术应用水平大赛</view> -->

  <view class="container_header">

    <view class="container_header_img">
      <image class="img_header" src="{{src}}"></image>
    </view>

    <view class="container_header_content">

      <view class="container_header_content_top">
        <!-- <view class="lump_title" ></view> -->
        <view class="text_title" id="title">{{detail.title}}</view>
      </view>


      <view class="container_header_content_bottom">


        <view class="container_position">
          <image class="icon_position" src="../../assets/icons/position.svg"></image>
          <view class="text_position">地点: {{detail.place}}</view>
        </view>

        <view class="container_time">
          <image class="icon_time" src="../../assets/icons/time1.svg"></image>
          <view class="text_time">时间: {{detail.startTime + ' ' + detail.duration === "undefined undefined" ? ' ': detail.startTime + ' ' + detail.duration}}</view>
        </view>

        <view class="container_category">
          <image class="icon_category" src="../../assets/icons/square_black.svg"></image>
          <view class="text_max_people">类别: {{CATEGORY[detail.category - 1]}}</view>
        </view>

        <view class="container_activity_id">
          <image class="icon_activity_id" src="../../assets/icons/number.svg"></image>
          <view class="text_activity_id">活动编号: {{detail.activityId}}</view>
        </view>

        <view class="container_activity_telephone">
          <image class="icon_activity_telephone" src="../../assets/icons/telephone.svg"></image>
          <view class="text_activity_telephone">联系电话: {{detail.contact}}</view>
        </view>

        <view class="container_publisher">
<!--          <image class="img_publisher" src="../../assets/pic/activityItem.jpeg"></image>-->
          <view class="text_publisher">{{detail.organizer}}</view>
<!--										<view class="text_faculty">{{detail.undertaker}}</view>-->
        </view>

      </view>

      <view class="container_header_bottom_bar" wx:if="{{detail}}">
								<image class="icon_copy" src="../../assets/icons/copy.svg" bindtap="copy" data-text="{{headerText}}"></image>
        <!-- <button class="btn_share" open-type="share"><image class="icon_share" src="../../assets/icons/share.svg"></image></button> -->
      </view>

