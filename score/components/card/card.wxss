/* score/components/card/card.wxss */
.card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin: 30rpx;
  border-radius: 12rpx;
  background-color:#ffffff;
  border: solid rgb(121, 177, 250) 2px;
  box-shadow: 0rpx 5rpx 10rpx 0rpx rgba(102, 102, 102, 0.2);
  border-left: solid rgb(121, 177, 250) 4px;
}
.leftContainer {
  display: flex;
  flex-direction: column;
  width: 450rpx;
}
.nameText {
  color: #343a40;
  word-wrap: break-word;
  margin-bottom: 10rpx;
  font-weight: bold;
  font-size: 40rpx;
  box-shadow: 0rpx 5rpx 0rpx 0rpx #ffc53d;
}
.creditText {
  font-weight: bold;
  font-size: 35rpx;
  color: rgba(52,58,64, 0.8);
}
.semesterText {
  font-weight: bold;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.5);
}

.detailContainer {
	display: flex;
	flex-direction: column;
	font-size: 30rpx;
  color: rgba(0, 0, 0, 0.5);
  
}

.detailText {
  transform: scale(1, 0);
}

