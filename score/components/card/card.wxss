/* score/components/card/card.wxss */

.placeholder_state {
	margin: auto;
	height: 75%;
	width: 75%;
	border-radius: 10%;
	background-color: #2e62cd;
}

.main {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin: 0 1em;
	background-color: white;
	border-bottom: 1px solid #BBDEFB;
	/* box-shadow: 0rpx 5rpx 5rpx 0rpx rgba(102, 102, 102, 0.2); */
}

.container_left {
	padding: .5rem 0;
	flex-grow: 1;
}

.container_right {
	padding: .5rem;
	margin-left: .5rem;
}

.name {
	overflow-wrap: break-word;
	font-weight: bold;
	color: #333;
}

.info {
	margin-top: .25rem;
	padding-top: .25rem;
	border-top: 2px solid #ffc53d;
	font-size: 14px;
	font-weight: 500;
	color: #555;
}

.details {
	margin-top: .25rem;
	padding-left: .5ch;
	border-left: 2px solid #64B5F6;
	font-size: 13px;
	color: #555;
}

.text_grades {
	/* margin:auto; */
	font-weight: 500;
	font-size: x-large; /* 1.5em */
	color: #2196F3;
}

.fail {
	color: red;
}
