/* freshman/pages/guide/guide.wxss */
.mapContainer {
	font-weight: bold;
	height: 100%;
}

.map {
	height: 100%;
	width: 100%;
}

.toNowLocation {
	width: 10%;
	height: 10%;
	position: absolute;
	left: 5%;
	bottom: 0%;
}

.backToSchool {
	background-color: #d9d9d9;
	box-shadow: 0 0 10rpx 1rpx #D1D1D1;
	border-radius: 10rpx;
	position: absolute;
	left: 45%;
	bottom: 3%;
}

.btn_container {
	margin-top: 30rpx;
	width: 100%;
	height: 100rpx;
	border-radius: 4px;
	display: flex;
	justify-content: space-around;
	align-items: center;
	position: absolute;
	bottom: 3%;
}

.btn {
	display: flex;
	justify-content: center;
	width: 30%;
	color: #fff;
	background: #FDC830;
	/* fallback for old browsers */
	background: -webkit-linear-gradient(to right, #F37335, #FDC830);
	/* Chrome 10-25, Safari 5.1-6 */
	background: linear-gradient(to right, #F37335, #FDC830);
	/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
	box-shadow: 0px 5px 15px 0px rgba(76, 145, 224, 0.34);
	line-height: 79rpx;
	border-radius: 4px;
	height: 80rpx;
	font-weight: bold;
}

.car_route {
	margin-left: 15%;
}

.navigation_app {
	margin-right: 15%;
}
