.background {
	position: fixed;
	top: 1rem;
	left: 0;
	z-index: -1;
	width: 100%;
	height: 100%;
}

.main {
	display: flex;
	flex-direction: column;
	box-sizing: border-box;
	max-width: 32rem;
	margin: 0 auto;
	padding: 0 1rem;
	z-index: 1;
}

.card {
	box-sizing: border-box;
	box-shadow: var(--shadow-2dp);
	opacity: 98%;
	transition:
		var(--transition-shadow),
		var(--transition-opacity);
}

.card:not(:last-child) { margin-bottom: 1rem; }

.card:active {
	box-shadow: var(--shadow-4dp);
	opacity: 100%;
}
