/* timetable/components/detail/detail.wxss */
.background {
	width: 90vw;
	height: 500px;
	box-shadow: var(--shadow-2dp);
}

.background1 {
	width: 90vw;
	height: 400px;
	z-index: 1;
	position: absolute;
	top: 320px;
	box-shadow: var(--shadow-2dp);
}

.background2 {
	width: 90vw;
	height: 500px;
	z-index: 2;
	position: absolute;
	top: 410px;
	box-shadow: var(--shadow-2dp);
}

.slider {
	background: #E4EBF5;
	height: 40px;
	width: 90vw;
	display: flex;
	justify-content: center;
	align-items: center;
}

.slider_color {
	background: #d4d4d4;
	height: 4px;
	width: 25vw;
	border-radius: 2px;
}

.content {
	background: #E4EBF5;
	height: 500px;
}

.title {
	color: #14446A;
	font-weight: 500;
	margin-left: 5%;
}

.information {
	width: 90%;
	margin: 2vh 5%;
	background: #fff;
	border-radius: 4px;
}

.icon {
	width: 32px;
	height: 32px;
}

.table {
	display: flex;
	align-items: center;
	margin: 1em;
}

.text {
	margin-left: 1ch;
	font-size: .9em;
	color: #94baff;
}
