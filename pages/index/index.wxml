<!-- pages/index/index.wxml -->

<background type="index" />

<view class="main">

	<!-- banner -->
	<swiper class="card banner" indicator-dots="true" autoplay="true"
	interval="7500" duration="500" easing-function="ease-out" circular="true">
		<swiper-item>
				<navigator
					url="../article/article?url=https://mp.weixin.qq.com/s/-8EokbVdYlmfGSBPV2DSEg"
					style="display: contents;">
					<image class="banner-image" src="/assets/pic/article.png" />
				</navigator>
		</swiper-item>
		<swiper-item>
			<image class="banner-image" src="/assets/pic/temp_activity.png" bindtap="goTemp" />
		</swiper-item>
		<swiper-item>
			<image class="banner-image" src="/assets/pic/banner.png" />
		</swiper-item>
	</swiper>

	<!-- 滚动通知 -->
	<view class="card notice">
		<image src="/assets/icons/index/notice.png" />
		<swiper autoplay="true" interval="7500" duration="500" circular="true" vertical="true">
			<swiper-item wx:for="{{notices}}" wx:key="id" data-id="{{item.id}}"
			bindtap="showNotice">{{item.title}}</swiper-item>
		</swiper>
	</view>

	<!-- 功能索引 -->
	<view class="card menu">
		<view class="menu-cell" wx:for="{{items}}" wx:key="url" bindtap="router"
			data-index="{{index}}" data-url="{{item.url}}">
			<image class="{{ index === clicked ? 'living' : '' }}"
				src="{{item.iconPath}}" mode="heightFix" />
			{{item.text}}
		</view>
	</view>

	<view wx:if="{{ !isLogin }}" class="tip-login">尚未登录，请先在“我”中登录</view>

</view>
