<!-- pages/index/index.wxml -->

<template name="swiper-banner-image">
	<swiper-item>
		<image class="banner-image" src="{{src}}" bindtap="{{bindtap}}" />
	</swiper-item>
</template>

<background type="index" />

<view class="main">

	<!-- banner -->
	<swiper class="card banner" indicator-dots="true" autoplay="true"
	interval="7500" duration="500" easing-function="east-out" circular="true">
		<template is="swiper-banner-image" data="{{src:'/assets/pic/temp_activity.png', bindtap: goTemp}}" />
		<template is="swiper-banner-image" data="{{src:'/assets/pic/banner.png', bindtap: doNothing}}" />
	</swiper>

	<!-- 滚动通知 -->
	<view class="card notice">
		<image src="/assets/icons/index/notice.png" />
		<swiper autoplay="true"
			interval="7500" duration="500" circular="true" vertical="true">
			<swiper-item wx:for="{{notice}}" wx:key="id" data-id="{{item.id}}"
			bindtap="showNotice">{{item.title}}</swiper-item>
		</swiper>
	</view>

	<!-- 功能索引 -->
	<view class="card menu">
		<view class="menu-cell" wx:for="{{items}}" wx:key="url" bindtap="router"
			data-index="{{index}}" data-url="{{item.url}}">
			<image class="{{ index === clicked ? 'living' : '' }}"
				src="{{item.iconPath}}" mode="heightFix" />
			{{item.text}}
		</view>
	</view>

	<view wx:if="{{ !isLogin }}" class="tip-login">尚未登录，请先在“我”中登录</view>

</view>
