@import "/wxss/main";

/* swiper */
/* 横向边距：左右各 1rem */
/* 高宽比：21:9 = 7:3 */
.banner {
	height: calc(calc(100vw - 2rem) / 7 * 3);
}

.banner-image {
	width: 100%;
	height: 100%;
	border-radius: 2px;
}

.notice {
	display: grid;
	grid-template-columns: auto 1fr;
	align-items: center;
	height: 2em;
	padding: 0 .5em;
	gap: .5em;
	font-size: .9em;
}

.notice image {
	flex-shrink: 0;
	width: 1em;
	height: 1em;
	transform: rotate(-45deg);
}

.notice swiper {
	width: 100%;
	height: 100%;
}

.notice swiper-item {
	display: flex;
	align-items: center;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.menu {
	display: grid;
	grid-template-columns: repeat(4, 1fr);
}

.menu-cell {
	display: grid;
	justify-items: center;
	padding: 1em .5em;
	gap: .5em;
	font-size: .9em;
	font-weight: 500;
	color: #616161;
	transition: background-color var(--transition);
}

.menu-cell:active {
	background-color: #EEE;
}

/* 主页图标高度为 128px，宽度不定！ */
.menu-cell image {
	max-width: 4em;
	height: 2em;
}

.hint-login {
	width: 100% !important;
	padding: .25em;
	text-align: center;
	color: #212121;
	font-size: .9em;
	opacity: .75;
}

@keyframes living {
	0% { transform: scale(1); }
	25% { transform: scale(1.5); }
	50% { transform: scale(1); }
	75% { transform: scale(1.25); }
	100% { transform: scale(1); }
}

.living {
	animation: living .5s ease;
}
