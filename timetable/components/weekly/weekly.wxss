
.scroll {
	height: calc(100% - 4.25rem);
}

.main {
	display: flex;
	padding: .75rem 0;
	height: 1155rpx;
}

.time {
	display: flex;
	flex-direction: column;
	width: 2rem;
	height: 1155rpx;
	/* border-right:1px solid #568BE5; */
	/* background-color:wheat; */
}

.left {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 105rpx;
	font-weight: 500;
	color: #14446A;
}

.course {
	position: relative;
	width: calc(100% - 2rem);
	height: 1155rpx;
}

.schedule-item {
	position: absolute;
	display: flex;
	flex-direction: column;
	box-sizing: border-box;
	width: calc(100% / 7 - 2px);
	margin: 1px;
	padding: 1px;
	font-weight: 500;
	font-size: .75em;
	line-height: 1.2;
	color: white;
	border-radius: 4px;
}

.schedule-name {
	flex-shrink: 1;
	margin-bottom: auto;
	overflow: hidden;
}

.schedule-info {
	margin-top: 1px;
	text-align: center;
}
